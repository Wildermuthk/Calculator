<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--This is the clear button, it allows the user to delete
            the last input item without clearing the entire text field.-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/C"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:backgroundTint="#337DFF"
                app:cornerRadius="36dp"/>

            <!--This is the open parenthesis button "(", it inputs an open parenthesis
            when clicked by the user.-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_parenthesis"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/openParenthesis"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:backgroundTint="#4C4C4C"
                app:cornerRadius="36dp"/>

            <!--This is the close parenthesis button ")", it inputs a close parenthesis
            when clicked by the user.-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_parenthesis"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/closeParenthesis"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:backgroundTint="#4C4C4C"
                app:cornerRadius="36dp"/>

            <!--This is the division button "/", it inputs division symbol and divides
            the input when clicked by the user.-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_division"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="@string/division"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:backgroundTint="#4000FF"
                app:cornerRadius="36dp"/>

        </LinearLayout>

